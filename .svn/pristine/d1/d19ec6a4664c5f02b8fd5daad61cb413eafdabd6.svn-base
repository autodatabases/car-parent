@charset "utf-8";
.header{
	background: #fff;
	position: relative;
	border-bottom: 1px solid #e0e0e0;
}
.header h1{
	font-size: 0.9375rem;
	line-height: 2.75rem;
	text-align: center;
} 
.back{
	position: absolute;
	left: 0;
	top: 0;
	width:15%;
	height:100%;
	background:url(../../imgs/coupon/back-icon.png) no-repeat center ;
	background-size:20% ;
}
/* 步骤 */
.step{
	position: relative;
	padding-top: 2rem;
	padding-bottom: 0.875rem;
	font-size: 0.75rem;
}
.step span{
	position: absolute;
	top:0.3rem;
	color: #bcbcbc;
}
.step span.one{
	left: 5%;
	color: #ff3e5b;
}
.step span.two{
	left:50% ;
	margin-left: -10%;
}
.step span.three{
	right:5% ;
}
.step div{
	width:90%;
	height:0.3125rem;
	background: #e9e9e9;
	margin-left: 5%;
}
.step div:after{
	content: "";
	display: block;
	background: #ff3e5b;
	height: 100%;
	width:0;
}
.step i{
	display: block;
	position: absolute;
	width:1rem;
	height:1rem;
	border-radius: 50%;
	border:1px solid #ff3e5b;
	background: #fff;
	left:5%;
	top: 1.625rem;
}
.step i:after{
	content: "";
	display: block;
	width:0.7rem;
	height:0.7rem;
	border-radius: 50%;
	background: #ff3e5b;
	margin-top:0.15rem ;
	margin-left:0.15rem ;
}
/* 信息 */
.forms{
	border-top: 1px solid #eaeaea;
}
.forms ul{
	background: #fff;
}
.forms li{
	border-bottom: 1px solid #eaeaea;
	padding:3% 0 3% 10% ;
	font-size: 0.75rem;
	overflow: hidden;
}
.forms li input{
	border: none;
	width: 70%;
	float: left;
	height:1.125rem;
}
.forms li label{
	margin-right: 0.5rem;
	vertical-align: middle;
	float: left;
}
.btn{
	width: 90%;
	margin-left:5%;
	border:1px solid #ff3e5b;
	border-radius: 5px;
	background: #ff3e5b;
	color: #fff;
	margin-top: 1rem;
	height:2.5rem;
}

