/*头部*/
.header{
	background: #fff;
	border-bottom:1px solid #cecece;
	text-align: center;
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 999;
}
.header h1{
	height:2.75rem;
	font-size: 0.9375rem;
	line-height: 2.75rem;
}
.back{
	position: absolute;
	left: 0;
	top: 0;
	width:15%;
	height:100%;
	background:url(../../imgs/oilCard/back.png) no-repeat center;
	background-size:20% ;
}

/*内容部分*/
.content {
	margin-top: 3.25rem;
	width: 100%;
}
.tab {
	width: 100%;
	overflow: hidden;
	text-align: center;
	background-color: #fff;
	padding-top: 1rem;
	margin-top: 0.3rem;
}
.tab .tab_btn {
	width: 80%;
	margin: 0 auto;
	border: 1px solid #2aaff4;
	border-radius: 5px;
	height: 2rem;
	line-height: 2rem;
	box-sizing: border-box;
	overflow: hidden;
}
.tab .tab_btn span {
	display: block;
	float: left;
	width: 50%;
}
.on {
	background-color: #2aaff4;
	color: #fff;
}
.tab .tab_con {
	width: 80%;
	margin: 0 auto;
	height: 4rem;
	line-height: 4rem;
}
.miss {
	display: none;
}

/*维护提示*/
.point {
	height: 3rem;
	width: 100%;
	text-align: center;
	line-height: 3rem;
	color: red;
	background-color: #fff;
	font-size: 14px;
	display: none;
}

/*输入信息部分*/
.info {
	width: 100%;
	overflow: hidden;
	background-color: #fff;
	padding-bottom: 1rem;
}
.info div {
	width: 80%;
	height: 3rem;
	margin: 0 auto;
}
.info div span {
	display: block;
	float: left;
	width: 26%;
	line-height: 3rem;
}
.info div input {
	display: block;
	float: left;
	width: 74%;
	height: 2rem;
	font-size: 14px;
	text-align: center;
	border: 0;
	border-bottom: 1px solid #ccc;
	box-sizing: border-box;
	margin-bottom:1rem ;
}

/*面额*/
.money {
	width: 100%;
	overflow: hidden;
	background-color: #fff;
}
.money .coupons {
	width: 80%;
	margin: 0 auto;
	height: auto;
	margin: 0 auto;
	padding-top: 0.5rem;
	overflow: hidden;
}
.money .coupons ul {
	width: 100%;
}
.money .coupons ul li {
	float: left;
	width: 30%;
	height: 3rem;
	border: 1px solid #ccc;
	background-color: #fff;
	border-radius: 5px;
	box-sizing: border-box;
	margin: 0 1.5%;
	margin-bottom: 0.5rem;
}
/*.money .coupons ul li:nth-child(2) {
	margin: 0 4%;
}
.money .coupons ul li:nth-child(5) {
	margin: 0 4%;
}*/
.money .coupons ul li p {
	width: 100%;
	text-align: center;
	font-size: 16px;
	line-height: 3rem;
}
.money .money-title p{
	padding-left:1rem ;
	line-height: 2rem;
	font-size: 16px;
}
.money div:nth-child(3) {
	width: 70%;
	margin: 0 auto;
	height: 3rem;
	margin-top: 2rem;
	margin-bottom: 1rem;
}
.money div:nth-child(3) input {
	display: block;
	height: 2.5rem;
	margin-top: 0.8rem;
	font-size: 14px;
	text-align: center;
	border: 0;
	box-sizing: border-box;
	padding: 0 1rem;
	width: 100%;
	font-size: 18px;
	background-color: #2aaff4;
	border: 0;
	border-radius: 5px;
	color: #fff;
}


/*充值问题提示*/
.problem {
	width: 90%;
	margin: 0 auto;
	border: 1px solid #eee;
	padding-bottom: 1rem;
	overflow: hidden;
	margin-bottom: 1rem;
}
.problem h4 {
	text-align: center;
	line-height: 2rem;
	font-weight: normal;
}
.problem p:nth-child(even) {
	margin-top: 0.4rem;
	color: #FF3E5B;
	padding: 0 0.6rem;
	font-size: 14px;
}
.problem p:nth-child(odd) {
	padding: 0 0.6rem;
	font-size: 12px;
}
/*弹出框*/
.tip {
	display: none;
}
.tip .bg {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.5);
}
.tip .tipCon {
	position: absolute;
	top: 25%;
	left: 15%;
	width: 70%;
	background: #fff;
	border-radius: 8px;
}
.tip h3 {
	font-weight: normal;
	font-size: 16px;
	height: 2rem;
	line-height: 2rem;
	text-align: center;
}
.cont {
	padding: 0.2rem 1rem;
	color:#666666;
	font-size: 14px;
	padding-bottom: 1rem;
}
.cont span{
	color: #29aff3;
}
.tipCon .btnCon {
	border-top: 1px solid #ccc;
	text-align: center;
}
.btnCon > div{
	width: 50%;
	float: left;
	height: 2.4rem;
	line-height: 2.4rem;
	position: relative;
}
.btnCon > div:nth-child(1):after{
	content: "";
	width: 1px;
	height: 100%;
	background: #ccc;
	position: absolute;
	right: 0;
	top: 0;
}
.btnCon > div:nth-child(1) a{
	color: #2aaff4;
}
