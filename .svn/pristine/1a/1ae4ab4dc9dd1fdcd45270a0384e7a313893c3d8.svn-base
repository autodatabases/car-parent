@charset "utf-8";
.header{
	background: #fff;
	position: relative;
	border-bottom: 1px solid #e0e0e0;
}
.header h1{
	font-size: 0.9375rem;
	line-height: 2.75rem;
	text-align: center;
} 
.back{
	position: absolute;
	left: 0;
	top: 0;
	width:15%;
	height:100%;
	background:url(../../imgs/coupon/back-icon.png) no-repeat center;
	background-size:20% ;
}
/* 步骤 */
.step{
	position: relative;
	padding-top: 2rem;
	padding-bottom: 0.875rem;
	font-size: 0.75rem;
}
.step span{
	position: absolute;
	top:0.3rem;
	color: #bcbcbc;
}
.step span.one{
	left: 5%;
	color: #ff3e5b;
}
.step span.two{
	left:51% ;
	margin-left: -10%;
	color: #ff3e5b;
}
.step span.three{
	right:5% ;
}
.step div{
	width:90%;
	height:0.3125rem;
	background: #e9e9e9;
	margin-left: 5%;
}
.step div:after{
	content: "";
	display: block;
	background: #ff3e5b;
	height: 100%;
	width:49%;
}
.step i{
	display: block;
	position: absolute;
	width:1rem;
	height:1rem;
	border-radius: 50%;
	border:1px solid #ff3e5b;
	background: #fff;
	left: 47%;
	top: 1.625rem;
}
.step i:after{
	content: "";
	display: block;
	width:0.7rem;
	height:0.7rem;
	border-radius: 50%;
	background: #ff3e5b;
	margin-top:0.15rem ;
	margin-left:0.15rem ;
}
/* 上传图片 */
.upload-warp{
	background: #fff;
	border-top:1px solid #eaeaea;
	border-bottom:1px solid #eaeaea;
	margin-bottom: 1.6rem;
}
.upload-warp p{
	border-bottom:1px solid #eaeaea;
	padding:0 0.625rem;
	line-height: 1.625rem;
	height: 1.625rem;
	font-size: 0.75rem;
}
.upload-warp p span{
	float: right;
	color: #ff3e5b;
}
.upload{
	width: 84%;
	height: 6.09375rem;
	border:1px dashed #eaeaea;
	margin:1rem 8% ;
	background: url(../../imgs/busines/upload-bg.png) no-repeat center 35% ;
	background-size:25% ;
	text-align: center;
	position: relative;
}
.upload span{
	position: absolute;
	bottom: 10%;
	left: 0;
	display: block;
	width: 100%;
	font-size: 0.75rem;
}
.upload input{
	width:100%;
	height: 100%;
	opacity: 0;
}
img{
	width: 100%;
	height:auto;
}
.tip{
	font-size:0.75rem;
	display: block;
	line-height: 1;
	padding:0 1.6rem 1rem 1.6rem;
}
.btn{
	width: 90%;
	margin-left:5%;
	border:1px solid #ff3e5b;
	border-radius: 5px;
	background: #ff3e5b;
	color: #fff;
	height:2.5rem;
}





