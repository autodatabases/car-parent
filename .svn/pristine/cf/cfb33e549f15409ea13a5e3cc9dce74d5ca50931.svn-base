.header{
	position: relative;
	background: #fff;
	border-bottom: 1px solid #848484;
}
.header h1{
	font-size: 16px;
	line-height: 2.75rem;
	text-align: center;
} 
.back{
	position: absolute;
	left: 0;
	top: 0;
	width:15%;
	height:100%;
	background:url(../../imgs/login/back-icon.png) no-repeat center;
	background-size:20% ;
}
.back-home{
	position: absolute;
	right: 0;
	top: 0;
	width:15%;
	height:100%;
	background: url(../../imgs/index/home.png) no-repeat center;
	background-size:45% ;
}
/* 详情 */
.case-details{
	border-top: 1px solid #eaeaea;
	padding-bottom:3.125rem ;
}
.case-details li{
	background: #fff;
	border-bottom:1px solid #eaeaea;
	font-size:0.875rem;
	padding: 0.625rem;
	overflow: hidden;
}
.case-details li.img-box{
	margin: 0.625rem 0;
	border-top: 1px solid #eaeaea;
}
.case-details li div{
	float: left;
	width:43%;
	height: 7rem;	
	margin: 3%;
}
.case-details li div img{
	width: 100%;
	height: 100%;
}
.case-details li span{
	display: inline-block;
	width:70%;
	vertical-align: top;
}
.case-details li span.names{
	width:20%;
}
.case-details li span.times{
	width:27%;
}
.case-details li input.money{
	border: none;
	width:60%;
}
.case-details li textarea{
	width:60%;
	height: 6.25rem;
	vertical-align: top;
	border: none;
	outline: none;
}
/* 下一步 */
.next-btn{
	display: block;
	width:90%;
	height:2.6rem;
	line-height:2.6rem;
	text-align: center;
	background: #ff3d5d;
	color: #fff;
	border:1px solid #ff3d5d;
	border-radius: 5px;
	margin: 2rem auto;
}
