<#include "../commons/header.ftl" />
	<title>商家设置-手机解绑</title>
		<link rel="stylesheet" type="text/css" href="${_RESOURCES}/css/busines/phone-unbund.css?v=${_version}"/>
	</head>
	<body>
		<!-- 头部 -->
		<header class="header">
			<span class="back mui-action-back"></span>
			<h1>手机解绑</h1>
		</header>
		<section class="forms">
			<!-- 手机号 -->
			<div class="tel">
				<input type="number" id="userName" placeholder="请填写当前手机号"/>
				<input type="button" class="getcode" id="getcode" value="确认解绑"/>
			</div>
			<!-- 验证码 -->
			<div class="pas">
				<input type="number" id="code" placeholder="输入验证码"/>
			</div>
			<!-- 新的手机号 -->
			<div class="tel">
				<input type="number" placeholder="请输入新的手机号" />
			</div>
			<input type="button"  id="login" class="action" value="确认提交" />
		</section>
	</body>
</html>